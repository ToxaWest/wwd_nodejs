<%- include('blocks/header') -%>

<div class="post-page" style="background-image:url('/public/content/<%- post.images %>')">
        <div class="post-single">
            <h2><%- post.title %></h2>
            <div class="post-single__description">
                <span><%- post.fulldescription %></span>
            </div>
            <div class="post-single__type">
                <span><%- post.type %></span>
            </div>
            <div class="post-single__images">
                <div class="post-single__image">
                    <h3>Desktop</h3>
                    <img src="/public/content/<%- post.images %>" />
                </div>
                <% if(post.img2) {%>
                    <div class="post-single__image">
                        <h3>Mobile</h3>
                        <img src="/public/content/<%- post.img2 %>" />
                    </div>
                <% } %>
            </div>
        </div>
</div>

<%- include('blocks/footer') -%>